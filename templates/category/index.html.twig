{% extends 'base.html.twig' %}
{% block title %}Catégories{% endblock %}

{% block body %}

    <table id="categories" class="table table-striped">

        <thead>
        <tr>
            <th>Catégorie</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for category in category %}
            <tr>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="/category/{{ category.id }}" class="btn btn-info">Détails</a>
                    <a href="/category/edit/{{ category.id }}" class="btn btn-warning">Modifier</a>
                    <form method="post" action="{{ path('category_delete', {id: category.id}) }}"
                          style="display: inline-block" onsubmit="return confirm('Etes-vous sûr de supprimer {{ category.title }} ?')">
                        <input type="hidden" title="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
